<layout version="0.1.0">
	<adminhtml_system_config_edit>
		<reference name="head">
			<action method="addItem">
				<type>skin_css</type>
				<name>css/luigifab/modules/styles.min.css</name>
				<params>media="screen, projection"</params>
			</action>
		</reference>
	</adminhtml_system_config_edit>

	<adminhtml_modules_index_index>
		<reference name="head">
			<action method="setTitle" translate="title">
				<title>Installed modules / Tools / Magento Admin</title>
			</action>
			<action method="addItem">
				<type>skin_css</type>
				<name>css/luigifab/modules/styles.min.css</name>
				<params>media="screen, projection"</params>
			</action>
			<action method="addItem">
				<type>skin_js</type>
				<name>js/luigifab/modules/app.min.js</name>
			</action>
			<action method="addItem">
				<type>skin_js</type>
				<name>js/luigifab/modules/tablesort.min.js</name>
			</action>
		</reference>
	</adminhtml_modules_index_index>
</layout>